@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    #ip2 {
        border-radius: 25px;
        border: 2px solid #609;
        padding: 20px;
        width: 200px;
        height: 15px;
        display: block;
        margin: 0 auto;
    }
</style>
<div class="container mt-4 text-center">
    <h3>Create a new account now</h3>
    <div>
        
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input id="ip2" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input id="ip2" asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input id="ip2" asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
        <div class="mt-4">
            <section>
                <h4>Login through your external account</h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                                for details on setting up this ASP.NET application to support logging in via external services.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    <button class="btn btn-default" type="submit" name="provider" value="Google" title="Log in using your Google account"><i style="color:dodgerblue" class="fab fa-google fa-2x"></i></button>
                                    <button class="btn btn-default" type="submit" name="provider" value="Facebook" title="Log in using your Facebook account"><i style="color:blue" class="fab fa-facebook fa-2x"></i></button>
                                    <button class="btn btn-default" type="submit" name="provider" value="Microsoft" title="Log in using your Microsoft account"><i style="color:deepskyblue" class="fab fa-microsoft fa-2x"></i></button>
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
