@model HomeGroom.ViewModels.CategoryViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<section class="py-5" style="background-color: #310038 ">
    <div class="container-fluid py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col col-8">
                    <div class="text-center">
                        <img class="mb-5 mt-3" src="~/Images/home-removebg-preview.png" alt="..."/>
                        <br />
                        <p style="font-size:30px ;" class="text-info">
                            Home services on your fingertips
                        <p class="text-warning" style="font-size:24px ;">
                            Anytype of service at your desired time at your home just few clicks away.
                        </p>
                        <br /><br /><br />
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <a style="background-color: #d11b61; color: white; border-radius: 45%; padding: 20px; text-decoration: none; " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            <a style="background-color: #d11b61; color: white; border-radius: 45%; padding: 20px; text-decoration: none; " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        }
                    </div>
                </div>
                <div class="col col-4">
                    <img style="width:auto; height: 400px;" src="~/Images/labour-removebg-preview.png">
                </div>
            </div>
        </div>
    </div>
</section>
<section class="mt-5">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-6">
                            <div class="container" style="background-color:lavender;border-radius:50%;padding:50px">
                                <p class="display-6 text-primary text-center">
                                    Plumber 
                                <p class="text-center">Get your furnitures or water/gas supply repaired</p>
                                <div class="text-center">
                                    <a class="btn btn-warning" asp-controller="Menu" asp-action="Index" asp-route-category="4">Book Now</a>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col col-6">
                            <img style="width:auto; height: 500px;" src="~/Images/plumber.jpg">
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-6">
                            <div class="container" style="background-color:lavender;border-radius:50%;padding:50px">
                                <p class="display-6 text-primary text-center">
                                    Salon
                                <p class="text-center">Get your Hair Cut and grooming direct in your home for both male and female</p>
                                <div class="text-center">
                                    <a class="btn btn-warning" asp-controller="Menu" asp-action="Index" asp-route-category="2">Book Now</a>
                                </div>
                                

                            </div>
                        </div>
                        <div class="col col-6">
                            <img style="width:auto; height: 500px;" src="~/Images/salon.jpg">
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-6">
                            <div class="container" style="background-color:lavender;border-radius:50%;padding:50px">
                                <p class="display-6 text-primary text-center">
                                    Cleaning and Disinfection
                                <p class="text-center">Get your house or set of furniture and electrical appliances clean and disinfected</p>
                                <div class="text-center">
                                    <a class="btn btn-warning" asp-controller="Menu" asp-action="Index" asp-route-category="1">Book Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col col-6">
                            <img style="width:auto; height: 500px;" src="~/Images/clean.jpg">
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-6">
                            <div class="container" style="background-color:lavender;border-radius:50%;padding:50px">
                                <p class="display-6 text-primary text-center">
                                    Electrical Repairment
                                <p class="text-center">Fix your electrical or electroics appliances</p>
                                <div class="text-center">
                                    <a class="btn btn-warning" asp-controller="Menu" asp-action="Index" asp-route-category="3">Book Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col col-6">
                            <img style="width:auto; height: 500px;" src="~/Images/electrician.jpg">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <i style="color:purple;" class="fas fa-angle-left fa-2x"></i>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <i style="color:purple;" class="fas fa-angle-right fa-2x"></i>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>




