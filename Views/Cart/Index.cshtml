@model HomeGroom.ViewModels.CartViewModel
   
<div class="container mt-4">
    <p style="font-family:Georgia;" class="display-6 text-secondary text-center mt-3">Appointments</p>
    @*<div style="border:solid;border-color:black;float:right;">
            <p style="color:darkblue;font-size:30px;float:right"><b style="color:black">Total = </b><b>@Model.CartTotal.ToString("C")</b></p>
        </div>*@
    @if (((int)Model.CartTotal) > 0)
    {
        <p style="color:darkblue;font-size:24px;"><b style="color:black">Total = </b><b>@Model.CartTotal.ToString("C")</b></p>
    }
    
    <br />
    @if (Model.Cart.CartItems.Count() == 0)
    {
        <h4>No Appointments booked yet...</h4>
    }
    @foreach (var item in Model.Cart.CartItems)
    {
        <div class="row">
            <div class="col col-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@Url.Content(item.Service.ImagePath)" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h4 class="card-title">@item.Service.ServiceName</h4>
                                <p class="card-text text-muted">Name - @item.Service.Name</p>
                                @*<p class="card-text text-muted">Mobile - @item.Service.Mob</p>*@
                                <p class="card-text text-muted">Address - @item.Service.Address1 @item.Service.Address2</p>
                                <p class="card-text text-muted">Time - @item.Service.Time.ToShortTimeString()</p>
                                <p class="card-text text-muted">Date - @item.Service.Date.ToShortDateString()</p>
                                <p class="card-text"><small><b>@item.Service.Price.ToString("C")</b></small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col col-5">
                <br /><br />
                <a class="btn btn-default" asp-controller="Cart" asp-action="Delete" asp-route-id="@item.Service.ServiceId"><i style="color:red" class="fas fa-trash-alt fa-2x"></i></a> &nbsp;&nbsp;&nbsp;&nbsp;
                <a class="btn btn-default" asp-controller="Menu" asp-action="Details" asp-route-serviceId="@item.Service.ServiceId"><i style="color:blue" class="fas fa-edit fa-2x"></i></a>
            </div>
        </div>

    }
<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Menu" asp-action="Index">Continue Adding</a> &nbsp;
    
    <a class="btn btn-success" asp-controller="Payment" asp-action="Index">Make Payment</a> &nbsp;
    

    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Clear Cart</a>
</div>
</div>

